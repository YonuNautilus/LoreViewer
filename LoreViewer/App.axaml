<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LoreViewer.App"
             xmlns:vm="using:LoreViewer.Presentation.ViewModels"
             xmlns:svm="using:LoreViewer.Presentation.ViewModels.SettingsVMs"
             xmlns:conv="using:LoreViewer.Converters"
             xmlns:avconv="using:Avalonia.Markup.Xaml.Converters"
             xmlns:avconv2="using:Avalonia.Controls.Converters"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Styles>
    <SimpleTheme/>
    <!--StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Simple/Simple.xaml" /-->
    <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Simple.xaml" />
    <StyleInclude Source="avares://Avalonia.Controls.TreeDataGrid/Themes/Generic.axaml" />
    <StyleInclude Source="avares://LoreViewer/Resources/Themes/TreeDataGridTheme.axaml" />
    <!--StyleInclude Source="avares://LoreViewer/Resources/Themes/TreeViewWithStructureLines.axaml" /-->

    <Style Selector="Button.rounded">
      <Setter Property="CornerRadius" Value="20"/>
    </Style>

    <Style Selector="TreeDataGridRow:selected">
      <Setter Property="Background" Value="Navy" />
    </Style>
  </Application.Styles>

  <Application.Resources>
    <ResourceDictionary>

      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://LoreViewer/Resources/Themes/SlimExpanderControlTheme.axaml" />
        <ResourceInclude Source="avares://LoreViewer/Resources/GlobalValues/CommonText.axaml" />
      </ResourceDictionary.MergedDictionaries>


      <conv:ValidationStateToImagePathConverter x:Key="ValidationImageConverter"/>
      <conv:LoreEntityToValidationMessageListConverter x:Key="ValidationErrorListConverter" />

      <conv:EnumDescriptionConverter x:Key="EnumConverter" />
      <conv:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" />

      <conv:ViewModeToViewConverter x:Key="ViewModeToViewConverter" />
      
      <conv:GreaterThanZero x:Key="GreaterThanZero" />
      <conv:CollapseExpandIconConverter x:Key="CollapseExpandIconConverter" />

      <conv:HasErrorsToHiddenGridLengthConverter x:Key="HasErrorsCollapseConverter"/>
      
      <avconv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
      <avconv2:MarginMultiplierConverter x:Key="MarginMultiplierConverter" />

    </ResourceDictionary>
  </Application.Resources>
</Application>