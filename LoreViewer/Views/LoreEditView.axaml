<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.ViewModels"
             xmlns:le="using:LoreViewer.LoreElements"
             xmlns:val="using:LoreViewer.Validation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Views.LoreEditView"
             x:DataType="vm:LoreViewModel">
  <UserControl.Resources>
    <vm:ValidationErrorToImagePathConverter x:Key="ValidationImageConverter"></vm:ValidationErrorToImagePathConverter>
    <vm:LoreEntityToErrorListConverter x:Key="ValidationErrorListConverter"></vm:LoreEntityToErrorListConverter>
  </UserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="30"/>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="400"/>
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Row="0" Grid.Column="0" FlowDirection="LeftToRight" Orientation="Horizontal">
      <TextBox Text="{Binding LoreLibraryFolderPath}" IsReadOnly="True" Width="250"></TextBox>
      <Button Name="BtnOpenFolder" Command="{Binding OpenLibraryFolderCommand}" DockPanel.Dock="Right" Content="Select Lore Library Folder" Width="160"></Button>
      <Button Name="BtnRefreshFolder" Command="{Binding ReloadLibraryCommand}" Content="Reload Lore Library"></Button>
    </StackPanel>

    <DockPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right">
      <Button Content="Open Lore Settings Editor" DockPanel.Dock="Right" Command="{Binding OpenLoreSettingsEditor}"/>
    </DockPanel>

    <Grid Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="2"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <TabControl Grid.Column="0">
        <TabItem Header="Nodes and Collections">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="1">
              <Grid >
                <Grid.RowDefinitions>
                  <RowDefinition Height="25" />
                  <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Nodes" />
                <TreeView Grid.Row="1" ItemsSource="{Binding Nodes}" SelectedItem="{Binding CurrentlySelectedTreeNode, Mode=OneWayToSource}" Grid.Column="0" Name="NodesTreeView" >
                  <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}">
                      <StackPanel Orientation="Horizontal">
                        <Image Width="16" Margin="0,0,5,0" Source="{Binding element, Converter={StaticResource ValidationImageConverter}}"></Image>
                        <TextBlock Text="{Binding DisplayName}" />
                      </StackPanel>
                    </TreeDataTemplate>
                  </TreeView.ItemTemplate>
                </TreeView>
              </Grid>
            </Border>

            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1">
              <Grid >
                <Grid.RowDefinitions>
                  <RowDefinition Height="25" />
                  <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Collections" />

                <TreeView Grid.Row="2" ItemsSource="{Binding NodeCollections}" Grid.Column="0" Name="CollectionsTreeView">
                  <TreeView.ItemTemplate>
                    <TreeDataTemplate ItemsSource="{Binding Children}">
                      <TextBlock Text="{Binding DisplayName}" />
                    </TreeDataTemplate>
                  </TreeView.ItemTemplate>
                </TreeView>
              </Grid>
            </Border>
          </Grid>

        </TabItem>

        <TabItem Header="Errors and Warnings">
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition />
              <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1">
              <Grid >
                <Grid.RowDefinitions>
                  <RowDefinition Height="25" />
                  <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Errors" Grid.Row="0" />

                <DataGrid Grid.Row="1" HorizontalScrollBarVisibility="Visible" ItemsSource="{Binding Errors}" Name="ErrorsListView" IsReadOnly="True" BorderBrush="Black" BorderThickness="1" CanUserResizeColumns="True">
                  <DataGrid.Columns>
                    <DataGridTextColumn Header="File" Width="Auto" Binding="{Binding Item1}" CanUserResize="True"/>
                    <DataGridTextColumn Header="BlockIndex" Binding="{Binding Item2}"/>
                    <DataGridTextColumn Header="Line#" Binding="{Binding Item3}"/>
                    <DataGridTextColumn Header="Exception Message" Binding="{Binding Item4.Message}" Width="Auto"/>
                  </DataGrid.Columns>
                </DataGrid>
              </Grid>
            </Border>

            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1">
              <Grid >
                <Grid.RowDefinitions>
                  <RowDefinition Height="25" />
                  <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Warnings" Grid.Row="0"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Warnings}" Grid.Column="0" Name="WarningsListView">
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock Text="{Binding}" />
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
              </Grid>
            </Border>
          </Grid>
        </TabItem>
      </TabControl>

      <GridSplitter Grid.Column="1"/>

      <DockPanel Grid.Column="2" Margin="5">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
          </Grid.RowDefinitions>
          <Label BorderBrush="Black" BorderThickness="1" Content="Node Info" />
          <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" >
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="4"/>
                <RowDefinition/>
              </Grid.RowDefinitions>
              <ScrollViewer Grid.Row="0">
                <TextBlock Margin="5" Name="CurrentNodeInfoTextBlock" Text="{Binding CurrentlySelectedTreeNode.CurrentNodeInfoText, Mode=OneWay}" TextWrapping="Wrap"/>
              </ScrollViewer>

              <GridSplitter Grid.Row="1" />

              <Border Grid.Row="2">
                <StackPanel Orientation="Vertical">
                  <Label>Validation Errors</Label>
                  <Button Classes="rounded" Content="{Binding CurrentlySelectedTreeNode.element.ErrMsg}" Command="{Binding OpenFileToLine}" CommandParameter="{Binding CurrentlySelectedTreeNode.element}"/>
                  <DataGrid ItemsSource="{Binding CurrentlySelectedTreeNode.element, Converter={StaticResource ValidationErrorListConverter}}">
                    <DataGrid.Columns>
                      <DataGridTemplateColumn Header="Error" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                          <DataTemplate DataType="val:LoreValidationError">
                            <TextBlock Text="{Binding Message}" />
                          </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                      </DataGridTemplateColumn>
                    </DataGrid.Columns>
                  </DataGrid>
                </StackPanel>
              </Border>
            </Grid>

          </Border>
        </Grid>
      </DockPanel>

    </Grid>


  </Grid>
</UserControl>
