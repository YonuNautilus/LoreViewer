<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.Presentation.ViewModels"
             xmlns:le="using:LoreViewer.LoreElements"
             xmlns:val="using:LoreViewer.Validation"
             xmlns:local="using:LoreViewer.Views"
             xmlns:evs="using:LoreViewer.Views.LoreElementViews"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Views.LoreReadonlyView"
             x:DataType="vm:LoreViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="26"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto" MaxHeight="300"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <StackPanel x:Name="LibraryInfoBar" Grid.Row="0" FlowDirection="LeftToRight" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Stretch">
      <Label Content="Lore Library Directory:"/>
      <Label Content="{Binding LoreLibraryFolderPath}" BorderBrush="{StaticResource ThemeBorderMidBrush}" BorderThickness="1"/>
    </StackPanel>
    
    <local:TopLevelElementsListView Grid.Row="1" Grid.Column="0"/>

    <evs:NodeViewBasic Grid.Row="1" Grid.Column="2"/> <!--DataContext="{Binding CurrentlySelectedElement}"/>-->
    
    <local:ParseErrorListView Grid.Row="2" Grid.ColumnSpan="2" ParseErrors="{Binding Errors}" VerticalAlignment="Top"
                              IsVisible="{Binding Errors.Count, Converter={StaticResource GreaterThanZero}}"
                              BorderBrush="{StaticResource ThemeBorderHighBrush}" BorderThickness="0,1.5,0,1.5"/>
    
  </Grid>
</UserControl>
