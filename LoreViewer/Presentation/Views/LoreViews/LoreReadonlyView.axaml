<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.Presentation.ViewModels"
             xmlns:vmmodes="using:LoreViewer.Presentation.ViewModels.Modes"
             xmlns:le="using:LoreViewer.LoreElements"
             xmlns:val="using:LoreViewer.Validation"
             xmlns:local="using:LoreViewer.Presentation.Views"
             xmlns:evs="using:LoreViewer.Presentation.Views.LoreElementViews"
             xmlns:controls="using:LoreViewer.Presentation.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Presentation.Views.LoreReadonlyView"
             x:DataType="vmmodes:LoreReadonlyViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="150"/>
      <RowDefinition Height="Auto" MaxHeight="300"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="250"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    
    <controls:OulineItemListView x:Name="OutlineList" Grid.Row="0" Grid.Column="0" />

    <evs:NodeViewBasic Grid.Row="0" Grid.Column="2" DataContext="{Binding CurrentEntityVM}"/>
    
    <controls:ValidationMessageListView Grid.Row="1" Grid.Column="2" Items="{Binding ValidationMessagesForCurrentOutline}"/>

    
    <local:ParseErrorListView Grid.Row="2" Grid.ColumnSpan="2" ParseErrors="{Binding ParseErrors}" VerticalAlignment="Top"
                              IsVisible="{Binding HasErrors}"
                              BorderBrush="{StaticResource ThemeBorderHighBrush}" BorderThickness="0,1.5,0,1.5"/>
    
    
  </Grid>
</UserControl>
