<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.Presentation.ViewModels"
             xmlns:le="using:LoreViewer.LoreElements"
             xmlns:val="using:LoreViewer.Validation"
             xmlns:local="using:LoreViewer.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Views.LoreEditView"
             x:DataType="vm:LoreViewModel">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="26"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" FlowDirection="LeftToRight" Orientation="Horizontal" HorizontalAlignment="Stretch">
      <Label Content="Lore Library Directory:"/>
      <Label Content="{Binding LoreLibraryFolderPath}" BorderBrush="{StaticResource ThemeBorderMidBrush}" BorderThickness="1"/>
    </StackPanel>
    
    
    
  </Grid>
</UserControl>
