<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoreViewer.Presentation.ViewModels.LoreEntities.LoreElements"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoreViewer.Presentation.Views.AttributeValueView"
             x:DataType="vm:AttributeValueViewModel">
  <ContentControl>
    <ContentControl.DataTemplates>
      
      <DataTemplate DataType="vm:StringAttributeValueViewModel">
        <TextBlock Text="{Binding ValueString}" />
      </DataTemplate>
      
      <DataTemplate DataType="vm:ColorAttributeValueViewModel">
        <StackPanel Orientation="Horizontal">
          <Rectangle Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"/>
          <Label Content="{Binding ColorName}" />
        </StackPanel>
      </DataTemplate>

      <DataTemplate DataType="vm:NumberAttributeValueViewModel">
        <Label Content="{Binding Number}" ToolTip.Tip="{Binding NumberType}"/>
      </DataTemplate>
    </ContentControl.DataTemplates>
  </ContentControl>
</UserControl>
